<%= form_with(model: directory) do |form| %>
  <% if directory.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(directory.errors.count, "error") %> prohibited this directory from being saved:</h2>

      <ul>
        <% directory.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :path, style: "display: block" %>
    <%= form.text_field :path %>
  </div>

  <div>
    <%= form.label :type, style: "display: block" %>
    <%= form.select :dir_type, Directory.dir_types.keys.map{ |key| [key.humanize, key] }, selected: @directory.dir_type || :video %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
